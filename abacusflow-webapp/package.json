{
  "name": "abacusflow-webapp",
  "productName": "AbacusFlow Admin",
  "version": "1.0.0",
  "description": "Admin app for AbacusFlow",
  "private": true,
  "type": "module",
  "main": "./electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "generate": "openapi-generator-cli generate -i ../abacusflow-portal/abacusflow-portal-web/src/main/resources/static/openapi.yaml -g typescript-fetch -o src/core/openapi --additional-properties fileNaming=kebab-case,withInterfaces=true,basePath=https://api.yourdomain.com --generate-alias-as-model",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "electron": "electron .",
    "pack": "electron-builder",
    "pack:mac": "electron-builder --mac",
    "pack:win": "electron-builder --win",
    "pack:linux": "electron-builder --linux",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@cubejs-client/core": "^1.3.31",
    "@tanstack/vue-query": "^5.80.7",
    "@zxing/library": "^0.21.3",
    "ant-design-vue": "^4.2.6",
    "echarts": "^5.6.0",
    "electron-squirrel-startup": "^1.0.1",
    "js-cookie": "^3.0.5",
    "pinia": "^3.0.1",
    "vue": "^3.5.13",
    "vue-echarts": "^7.0.3",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.21.0",
    "@tsconfig/node22": "^22.0.1",
    "@types/js-cookie": "^3.0.5",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/tsconfig": "^0.7.0",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "eslint": "^9.22.0",
    "eslint-plugin-vue": "~10.0.0",
    "jiti": "^2.4.2",
    "npm-run-all2": "^7.0.2",
    "prettier": "3.5.3",
    "typescript": "~5.8.0",
    "vite": "^6.2.4",
    "vite-plugin-checker": "^0.9.3",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vue-tsc": "^2.2.10"
  },
  "build": {
    "appId": "com.abacusflow.admin",
    "productName": "AbacusFlow Admin",
    "directories": {
      "output": "dist"
    },
    "files": [
      "package.json",
      "electron/**/*",
      "dist/**/*",
      "node_modules/**/*"
    ],
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "mac": {
      "category": "public.app-category.business",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AbacusFlow Admin"
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Office",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ]
    },
    "rpm": {
      "depends": [
        "libXScrnSaver"
      ]
    }
  }
}
